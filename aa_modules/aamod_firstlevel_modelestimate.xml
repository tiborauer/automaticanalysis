<?xml version="1.0" encoding="utf-8"?>
<aap>
    <tasklist>
        <currenttask mfile_alias='aamod_modelestimate' domain='subject' desc='Estimate a specified model' modality='MRI'>

            <saveresids>0</saveresids> <!-- by default SPM deletes residual images -->
            
            <model>
                <subject></subject>
                <session></session>
                <event>
                    <name></name>
                    <ons></ons>
                    <dur></dur>
                </event>
            </model>
            
            <inputstreams>    
                <stream>firstlevel_spm</stream>
                <stream ismodified='0'>epi</stream>
            </inputstreams>
            
            <outputstreams>
                <stream>firstlevel_spm</stream>
                <stream>firstlevel_betas</stream>
                <stream>firstlevel_brainmask</stream>                
            </outputstreams>
                          
        </currenttask>
    </tasklist>
</aap>