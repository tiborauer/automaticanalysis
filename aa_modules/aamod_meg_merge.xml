<?xml version="1.0" encoding="utf-8"?>
<aap>
    <tasklist>
        <currenttask domain='subject' desc='Merge MEG sessions' modality='MEG'>
            
            <qsub>
                <timeBase>0.1</timeBase>
                <memoryBase>0.5</memoryBase>
            </qsub>
            
            <!--How the condition labels will be translated
                'same' - leave the condition labels unchanged
                'addfilename' - add the original file name to condition label
                cell array of condition labels
                structure array of recoding rules (see spm_eeg_merge.m)
            -->
            <recode>same</recode>
            
            <prefix>c</prefix>
            
            <inputstreams>
                <stream>meg</stream>
            </inputstreams>
            
            <outputstreams>
                <stream>meg</stream>
            </outputstreams>
            
        </currenttask>
    </tasklist>
</aap>